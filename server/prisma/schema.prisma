generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(uuid())       // UUID primary key
  title     String
  content   String
  category  String
  tags      String[]                           // Postgres array
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isPinned  Boolean
  color     String?
}

